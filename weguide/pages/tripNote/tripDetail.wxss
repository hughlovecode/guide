/* pages/tripNote/tripDetail.wxss */
.body{
  width: 100%;
  height:100%;
  min-height: 100vh;
}
.swiperImg{
  width: 100%;
  height: 500rpx
}
.container{
  min-height:calc(100vh - 490rpx);
  position: relative;
  padding:30rpx;
  display: flex;
  background-color: #f2f2f2
}
.tag{
  display: flex;
  flex-direction: wrap;
  flex-wrap: wrap
}
.tagItem{
  display: block;
  height:50rpx;
  margin-right: 30rpx;
  border-radius: 5px;
  padding-left:5px;
  padding-right: 5px;
  border:1rpx solid black;
  font-style: italic;
  color:black;
  margin-bottom:5px;
  background-color:beige
}
.title{
  font-size: 50rpx;
  font-weight: 900;
  padding-left:30rpx;
  color:black;
}
.content{
  padding-bottom:20rpx;
  border-bottom:1px solid #ccc;
  margin-bottom:30rpx;
}
.content-p{
  font-size: 30rpx;
  color:black;
}