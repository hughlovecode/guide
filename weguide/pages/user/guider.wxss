/* pages/user/user.wxss */
.body{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  padding-top:1rem
}
.allbody{
  margin:0 5%;
  width: 90%;
}
/*item*/
.ArrayItem{ 
 position: relative;
 width: 100%;
 height: 150rpx; 
 background-color: white;
 border-radius: 10rpx;
 margin-top: 20rpx;
 box-shadow: 4rpx 4rpx 4rpx #aaaaaa;
 border:1px solid #ccc
} 
.guideImg{
  position: absolute;
  height: 120rpx;
  width: 120rpx;
  top: 15rpx;
  left: 30rpx;
  border-radius: 50%;
}
.guide-img{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1rpx solid #ccc
}
.guideName{
  position: relative;
  top: 10rpx;
  left: 200rpx;
  font-size: 35rpx;
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.guiderName{
  position: absolute;
  left: 200rpx;
  bottom: 15rpx;
  font-size: 30rpx;
  color: #ccc
}
.SignInBtn{
  position: absolute;
  bottom: 60rpx;
  right: 30rpx;
  font-size: 30rpx;
  text-align: center;
  background-color: #f2f2f2;
  border-radius: 5rpx; 
  border:1rpx solid #f2f2f2
}
.guideInfoBtn{
  position: absolute;
  bottom: 60rpx;
  right: 160rpx;
  font-size: 30rpx;
  text-align: center;
  background-color: #f2f2f2;
  border-radius: 5rpx; 
  border:1rpx solid #f2f2f2
}
.guideState{
  position: absolute;
  right: 30rpx;
  bottom: 15rpx;
  font-size: 30rpx;
  color: rgb(34, 186, 182)
}