<view class="container"> 
 <view class="login-icon"> 
 <image class="login-img" src="./../assets/images/bindBack.jpg"></image> 
 </view> 
 <view class="login-from"> 
  
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="./../assets/images/name.png"></image> 
  <label class="loginLab">用户id</label> 
  <input class="inputText" placeholder="请输入用户id" bindinput="userNameInput" /> 
 </view> 
 <view class="line"></view> 
  
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="./../assets/images/key.png"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
 </view> 
  
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="bindAccount">绑定</button> 
 </view> 
 </view> 
</view>